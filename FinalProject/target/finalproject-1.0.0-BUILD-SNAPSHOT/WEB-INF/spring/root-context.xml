<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	<bean name="userDao" class="com.me.dao.UserDAO" scope ="request"/>
	<bean name="restaurantDao" class="com.me.dao.RestaurantDAO" scope ="request"/>
	<bean name="customerDao" class="com.me.dao.CustomerDAO" scope ="request"/>
	<bean name="menuDao" class="com.me.dao.MenuDAO" scope ="request"/>
	<bean name="cartDao" class="com.me.dao.CartDAO" scope ="request"/>
	<bean name="orderDao" class="com.me.dao.OrderDAO" scope ="request"/>
		
</beans>
